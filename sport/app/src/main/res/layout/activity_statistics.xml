<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".statistics"
    android:orientation="vertical"
    android:background="@drawable/back2"
    android:paddingHorizontal="100dp"
    android:paddingVertical="20dp">

    <Space
        android:layout_width="match_parent"
        android:layout_height="70dp" />
    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/statistics" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="monthly steps:"
                android:layout_gravity="center"
                android:textSize="25dp"
                android:textColor="#000000"
                android:fontFamily="@font/godofwar"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="average steps\ntaken in a day:"
                android:layout_gravity="center"
                android:textSize="25dp"
                android:textColor="#000000"
                android:fontFamily="@font/godofwar"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="total caloriees\n burned:"
                android:layout_gravity="center"
                android:textSize="25dp"
                android:textColor="#000000"
                android:fontFamily="@font/godofwar"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="calories burned\nin a month:"
                android:layout_gravity="center"
                android:textSize="25dp"
                android:textColor="#000000"
                android:fontFamily="@font/godofwar"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="average calories\nburned per day:"
                android:layout_gravity="center"
                android:textSize="25dp"
                android:textColor="#000000"
                android:fontFamily="@font/godofwar"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>